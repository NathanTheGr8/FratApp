<!-- Content -->
<div class="row">
    <div class="container">
        <h2>Log In</h2>
        <%= form_for(:session, url: login_path) do |f| %>
        <%= f.email_field :email, placeholder: "Email", class: 'input-field validate' %>
        <%= f.password_field :password, placeholder:"Password", class: 'input-field validate' %>
        <%= f.submit "Log in", class: "waves-effect waves-light btn" %>
        <% end %>
        <br/>
        <h4>Still Need to Sign Up?</h4>
        <%= link_to "Sign Up", signup_path, class: 'waves-effect waves-light btn' %>
    </div>
</div>
